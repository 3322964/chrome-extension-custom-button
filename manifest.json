{
    "manifest_version": 2,

    "name": "Custom Button",
    "description": "Customize a button.",
    "version": "0.1",

    "permissions": ["notifications", "storage"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    // Browser actions pone el icono en la address bar
    // Los iconos de las actions son 19px y 38px, pero se redimensiona bien
    "browser_action": {
        "default_icon": {
            "38": "icons/default-32.png",
            "19": "icons/default-16.png"
        }
    },
    "icons": {
        "128": "icons/default-128.png",
        "48": "icons/default-48.png",
        "24": "icons/default-24.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "options_page": "options.html"
}