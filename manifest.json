{
    "manifest_version": 2,

    "name": "Youtube Download",
    "description": "Youtube Download with Savefrom site.",
    "version": "0.2",

    "permissions": ["notifications"],
    // Browser actions pone el icono en la address bar
    // Los iconos de las actions son 19px y 38px, pero se redimensiona bien
    "browser_action": {
        "default_icon": {
            "38": "icons/icon-48.png",
            "19": "icons/icon-24.png"
        }
    },
    "icons": {
        "128": "icons/icon-128.png",
        "48": "icons/icon-48.png",
        "24": "icons/icon-24.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "options_page": "options.html"
}